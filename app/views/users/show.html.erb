<main>
 <p id="notice"></p>
<div class='container px-5 px-sm-0'>
 <div class='row'>
   <div class='col-md-3'>
      <div class="flash">
       <%= flash[:notice] %>
       <%= flash[:danger] %>
       <%= flash[:error] %>
       <% if @user.errors.any? %>
       <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this  from being saved:</h2>
        <ul>
         <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
        </ul>
       </div>
       <% end %>
      </div>
     <h2>User info</h2>
     <table class='table'>
      <tr>
      <%= image_tag @user.get_profile_image(100,100) %>
     </tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction = @user.introduction.nil? ? "" : @user.introduction %></th>
      </tr>
     </table>
     <div class='row'>
      <tr>
       <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
       <% end %>
       </tr>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title"></input>
      </div>
      <div class="form-group">
        <label for="book_body">Opinion</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
       <td colspan="2">
        <%= f.submit "Create Book",class:"btn btn-success" %>
        </td>
      </tr>
       <% end %>
   </div>

   <tbody>
    <div class='col-md-8 offset-md-1'>
       <h2>Books</h2>
      <table class='table table-hover table-inverse'>
       <thead>
        <tr>
         <th>  </th>
         <th>Title </th>
         <th>Opinion </th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <div>
        <% @books.each do |book| %>
        <tr>
         <td>
           <%= image_tag @user.get_profile_image(100, 100) %><br>
          </td>
         <td><%= link_to book.title, book_path(book) %></td>
         <td><%= book.body %></td>
        </tr>
        <% end %>
       </div>
      </table>
     </div>
</tbody>
</div>
</div>
</main>