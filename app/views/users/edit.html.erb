<main>
 <p id="notice"></p>
<div class="container">
  <div class="row">
      <div class="flash">
   <%= flash[:notice] %>
   <%= flash[:danger] %>
   <%= flash[:error] %>
   <% if @user.errors.any? %>
   <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this  from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
   </div>
    <% end %>
   </div>
    <div class="mx-auto col-11 col-xl-6">
  <div class="row mt-3">
  <div class="btn-wrapper col-11 mx-auto">
   <h2 class="mt-2">User info</h2>
  <div class="btn-wrapper col-11 mx-auto">
    <%= form_with model: @user, url: user_path(@user), method: :patch, authenticity_token: true, multipart: true do |f| %>
      <!--%= form_with model: @user, url: edit_user_path(@user.id), method: :patch, authenticity_token: true do |f| %>-->
   <div>
    <label for="inputName">Name</label></div>
    <%= f.text_field :name, class:"form-control", id:"inputName", placeholder:"name",style: "width: 100%;" %>

    <div><label for="inputImage">Image</label></div>
     <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %>

    <div>
    <label for="inputinontroduction">introduction</label>
    <%= f.text_area :introduction, id:"inontroduction", placeholder:"inontroduction",style: "width: 100%;" %>
    </div>


     <div class="actions mt-3">
       <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
   <% end %>
     </div>
    </div>
 </div>
 </div>
</div>
</main>
